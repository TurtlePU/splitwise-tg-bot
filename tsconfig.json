{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "build",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "src",
    "paths": {
      "@locale": [ "locales/export" ],
      "@commands": [ "bot/commands/export" ],
      "@bot": [ "bot/main" ],
      "@storage": [ "storage/export.ts" ],
      "@api": [ "splitwise/api.ts" ],
      "@token": [ "splitwise/core.ts" ],
      "@util": [ "util.ts" ]
    }
  }
}
